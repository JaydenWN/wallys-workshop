---
import { Image } from "astro:assets";
import PrimaryButton from "../common/Primary_Button.astro";
import contactIcon from "@icons/message-white.svg";

const { title, text, ctaText, image } = Astro.props;
---

<div class="service-card">
    <Image src={image} alt="" class="image" />
    <div class="text-content">
        <h3>{title}</h3>
        <p>{text}</p>
        <PrimaryButton
            text={ctaText}
            link="/contact-wallys-workshop/#contact-form"
            icon={contactIcon}
        />
    </div>
</div>

<style>
    .service-card {
        display: flex;
        width: 100%;
        flex-direction: column;
        color: white;
        background-color: var(--purple);
        border-radius: 16px;
    }
    .text-content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 2rem;
    }
    h3 {
        font-size: 1.25em;
    }
    .image {
        height: 225px;
        width: 100%;
        object-fit: cover;
        border-radius: 15px 15px 0px 0px;
    }
    p {
        margin-bottom: 1rem;
    }

    @media (min-width: 768px) {
        .service-card {
            width: calc(50% - 1rem);
            box-sizing: border-box;
        }
        .text-content {
            padding: 2rem;
        }
    }

    @media (min-width: 1024px) {
        .service-card {
            flex-direction: row;
            width: 100%;
            max-width: 865px;
            margin: 0px auto;
        }
        .image {
            height: auto;
            width: 45%;
            border-radius: 16px 0px 0px 16px;
        }
        .text-content {
            padding: 3rem;
        }
    }
</style>
