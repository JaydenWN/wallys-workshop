---
import { Image } from "astro:assets";
import quoteIcon from "@icons/quote-icon.svg";
import stars from "@icons/stars.svg";

const { quote, quotee, title } = Astro.props;
---

<div class="testimonial-card">
    <div class="icons">
        <Image src={quoteIcon} alt="" />
        <Image src={stars} alt="" />
    </div>

    <h3>{title}</h3>
    <p>{quote}</p>
    <p class="quotee">- {quotee}</p>
</div>

<style>
    .testimonial-card {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding: 1.5rem;
        background-color: var(--purple);
        border-radius: 16px;
        color: white;
    }
    .icons {
        margin-bottom: 1rem;
        display: flex;
        justify-content: space-between;
    }
    h3 {
        font-size: 1.3em;
    }
    .quotee {
        text-align: right;
        font-weight: bold;
        color: var(--red);
    }

    @media (min-width: 768px) {
        .testimonial-card {
            padding: 3rem;
            width: 65%;
            margin: 0px auto;
        }
        .icons {
            margin-bottom: 2rem;
        }
    }

    @media (min-width: 1024px) {
        .testimonial-card {
            width: 100%;
            box-sizing: border-box;
        }
    }
</style>
