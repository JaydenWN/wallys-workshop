---
const today = new Date();
import footerLogo from "@icons/footer-site-logo.svg";
import { Image } from "astro:assets";
---

<footer>
	<div class="footer-container">
		<Image src={footerLogo} alt="" class="image" />

		<div class="links">
			<div class="site-nav">
				<h3>Site Navigation</h3>
				<ul>
					<li>
						<a href="/">Home</a>
					</li>
					<li>
						<a href="/">Services</a>
					</li>
					<li>
						<a href="/">About</a>
					</li>
					<li>
						<a href="/">Contact</a>
					</li>
				</ul>
			</div>

			<div class="social-links">
				<h3>Social Links</h3>
				<ul>
					<li>
						<a
							href="https://www.facebook.com/profile.php?id=61568707101685"
							>Facebook</a
						>
					</li>
				</ul>
			</div>

			<div class="contact-details">
				<h3>Contact Details</h3>
				<a href="tel:0426 977 997">0426 977 997</a>
				<a href="mailto:Wally@wallysmobileworkshop.com"
					>Wally@wallysmobileworkshop.com</a
				>
			</div>
		</div>
		<span class="beachside-link">
			<a href="https://www.beachsidewebdesigns.com"
				>&copy; {today.getFullYear()} Beachside Web Designs.</a
			>
		</span>
	</div>
</footer>

<style>
	footer {
		background-color: var(--text-purple);
		color: white;
	}
	.footer-container {
		padding: 1rem;
		display: flex;
		flex-direction: column;
		gap: 3rem;
	}
	.links {
		display: flex;
		flex-direction: column;
		gap: 4rem;
	}
	.image {
		opacity: 0.5;
		width: 200px;
		height: 200px;
		object-fit: cover;
	}
	ul {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}
	h3 {
		font-size: 1.15rem;
		margin-bottom: 1rem;
	}
	a {
		text-decoration: none;
		color: inherit;
	}
	.contact-details a:first-of-type {
		margin-right: 2rem;
	}
	.beachside-link {
		text-align: center;
	}

	@media (min-width: 768px) {
		.footer-container {
			padding: 4rem 4rem 1rem 4rem;
		}
		.site-nav {
			grid-area: site-nav;
		}
		.social-links {
			grid-area: social;
		}
		.contact-details {
			grid-area: contact;
		}
		.links {
			display: grid;
			grid-template-columns: 1fr 1fr;
			grid-template-areas:
				"site-nav social"
				"contact contact";
		}
	}
	@media (min-width: 1024px) {
		.links {
			grid-template-columns: 250px 250px 250px;
			grid-template-areas: "site-nav social contact";
			margin-top: 2rem;
		}
		.contact-details a:first-of-type {
			margin-bottom: 1rem;
			display: block;
		}
	}
</style>
