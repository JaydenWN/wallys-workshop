---
import { Image } from "astro:assets";
import carrot from "@icons/carrot.svg";

const { qaObject } = Astro.props;
---

<div class="faq">
    {
        qaObject.map((qa) => (
            <details>
                <span>{qa.a}</span>
                <summary>
                    {qa.q}
                    <Image src={carrot} alt="dropdown" />
                </summary>
            </details>
        ))
    }
</div>

<style>
    .container {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    section {
        background-color: var(--light-blue);
    }
    details {
        color: white;
        padding: 1rem;
        border-top: 1px solid var(--brand-blue);
        line-height: 2rem;
        background-color: var(--purple);
        border-radius: 16px;
    }
    summary {
        display: flex;
        justify-content: space-between;
        font-family: "heading";
        font-size: 1.25rem;
        line-height: 1.6rem;
        gap: 1rem;
    }
    details[open] summary {
        margin-bottom: 1rem;
    }
    details[open] summary img {
        transform: rotate(180deg);
    }
    .faq {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }

    @media (min-width: 1024px) {
        details {
            cursor: pointer;
        }
    }
</style>
