---
const { title, reasons } = Astro.props;
import { Image } from "astro:assets";
import checkmarkIcon from "@icons/check-clear.svg";
---

<div class="why">
    <h3>{title}</h3>
    <ul>
        {
            reasons.map((reason) => (
                <li>
                    <Image
                        src={checkmarkIcon}
                        alt="mould checkmark"
                        class="icon"
                    />
                    {reason}
                </li>
            ))
        }
    </ul>
</div>

<style>
    .icon {
        width: 38px;
    }
    ul {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    li {
        display: flex;
        gap: 1rem;
        align-items: center;
    }
    h3 {
        font-size: 1.5em;
    }
    .why {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin-top: 2rem;
    }
    @media (min-width: 1024px) {
        .why {
            padding: 2rem;
            box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
            border-radius: 16px;
            background-color: #fff;
        }
    }
    @media (min-width: 1440px) {
        .why {
            padding: 3rem;
        }
    }
</style>
